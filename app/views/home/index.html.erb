
<div class="container mt-4">
<div class="row mb-4">
<h2><i><b class="sorry">Welcome to event Event-Management Platform</b></i></h2><br>
 <div class="sor">
   <%= search_form_for @q, url: "/home", method: :get do |f| %>
      <%= f.label :"Search Event" %>
      <%= f.search_field :title_cont %>
      <%= f.submit %>
    <% end %>
    </div>
</div>
 <div class="row  mt-4">
          <% @events.each do|event|%>
          <div class="col">
              <div class="card m-2" style="width: 18rem;">
                <img src="/assets/event_images/img2.avif" class="card-img-top" alt="...">
                <div class="card-body">
                  <p class="card-text"><b class="core"><%= event.title.capitalize%></b></p>
                </div>
                <div class="d-flex justify-content-center mb-3">
                  <%= link_to "Check Event",event,methods: :get, class: "btn btn-secondary" %>
                </div>
              </div>
              </div>
            <%end%> 
        </div>
</div>
  </div>
</div>       
